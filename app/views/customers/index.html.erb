<%- model_class = Customer -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>


</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
new_customer_path,
:class => 'btn btn-primary' %>
<hr/>
  <% @customers.each do |customer| %>
    <div class="col-xs-12 list-group-item" style="padding:5px;">
      <span class="badge"><%= customer.created_at.strftime("%Y/%m/%d") %></span>
      <div class="col-xs-8">
        <span class="label label-info">Name:</span>
        <h3 class="list-group-item-heading"><%= link_to customer.name, customer_path(customer) %></h3>

        <p class="list-group-item-heading bg-warning"><span class="label label-warning">Note:</span><%= customer.note %></p>

        <p class="list-group-item-heading bg-warning"><span class="label label-default">SNS:</span><%= customer.snsid %></p>
      </div>

      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_customer_path(customer), :class => 'btn btn-info btn-xs right-bttom' %>
    </div>
    <!-- </li> -->
  <% end %>
</div>
