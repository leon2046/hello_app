<%= form_for @good, :html => { :class => "form-horizontal good" } do |f| %>

  <% if @good.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@good.errors.count, "error") %> prohibited this good from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @good.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-xs-12">
      <%= f.label :jan_cd, :class => 'control-label' %>
      <div class="input-group">
        <%= f.text_field :jan_cd, :class => 'form-control', :placeholder=>"45XXXXXXXX123", :pattern => '[0-9]{13}'%>
        <span class="input-group-btn">
          <button id="jan_cd_rakuten_query" class="btn btn-default" type="button">
            <span class="glyphicon glyphicon-search"></span>
          </button>
        </span>
      </div><!-- /input-group -->
    </div><!-- /.col-xs-12 -->
  </div><!-- /.row -->

  <div class="form-group">
    <div class="col-xs-12">
      <%= f.label :name_jp, :class => 'control-label' %>
      <div class="input-group">
        <%= f.text_field :name_jp, :class => 'form-control' %>
        <span class="input-group-btn">
          <button id="name_jp_rakuten_query" class="btn btn-default" type="button">
            <span class="glyphicon glyphicon-search"></span>
          </button>
        </span>
      </div><!-- /input-group -->
    </div><!-- /.col-xs-12 -->
  </div><!-- /.row -->

  <div class="form-group">
    <div class="col-xs-12">
      <%= f.label :name_cn, :class => 'control-label' %>
      <%= f.text_field :name_cn, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name_cn) %>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <%= f.label :price_jpy, :class => 'control-label' %>
      <%= f.text_field :price_jpy, :class => 'form-control', :pattern =>'[0-9]*' %>
    </div>
    <%=f.error_span(:price_jpy) %>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <%= f.label :profit_rate, :class => 'control-label' %>
      <%= f.text_field :profit_rate, :class => 'form-control', :value=>"10", :pattern => '[0-9]*'%>
    </div>
    <%=f.error_span(:profit_rate) %>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <%= f.label :image_path, :class => 'control-label' %>
      <%= f.text_field :image_path, :class => 'form-control' %>
    </div>
    <%=f.error_span(:image_path) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-12">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                goods_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
        <table class="table">
            <tr>
              <th scope="row">1</th>
              <td>Table cell</td>
            </tr>
        </table>
    </div>
  </div>
</div>
<%= javascript_include_tag "goods/goods" %>
