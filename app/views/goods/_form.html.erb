<%= form_for @good, :html => { :class => "form-horizontal good" } do |f| %>

  <% if @good.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@good.errors.count, "error") %> prohibited this good from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @good.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :jan_cd, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :jan_cd, :class => 'form-control' %>
    </div>
    <%=f.error_span(:jan_cd) %>
  </div>
  <div class="form-group">
    <%= f.label :name_jp, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name_jp, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name_jp) %>
  </div>
  <div class="form-group">
    <%= f.label :name_cn, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name_cn, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name_cn) %>
  </div>
  <div class="form-group">
    <%= f.label :price_jpy, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :price_jpy, :class => 'form-control' %>
    </div>
    <%=f.error_span(:price_jpy) %>
  </div>
  <div class="form-group">
    <%= f.label :profit_rate, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :profit_rate, :class => 'form-control' %>
    </div>
    <%=f.error_span(:profit_rate) %>
  </div>
  <div class="form-group">
    <%= f.label :image_path, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :image_path, :class => 'form-control' %>
    </div>
    <%=f.error_span(:image_path) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                goods_path, :class => 'btn btn-default' %>
      <%= link_to 'QueryGood','#', :id =>'rakuten_query', :class => 'btn btn-default'%>
    </div>
  </div>

  <%= javascript_include_tag "good/goods" %>
<% end %>
