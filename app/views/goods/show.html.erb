<%- model_class = Good -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.titleize %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:jan_cd) %>:</strong></dt>
  <dd><%= @good.jan_cd %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name_jp) %>:</strong></dt>
  <dd><%= @good.name_jp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name_cn) %>:</strong></dt>
  <dd><%= @good.name_cn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price_jpy) %>:</strong></dt>
  <dd><%= @good.price_jpy %></dd>
  <dt><strong><%= model_class.human_attribute_name(:profit_rate) %>:</strong></dt>
  <dd><%= @good.profit_rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_path) %>:</strong></dt>
  <dd><%= @good.image_path %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              goods_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_good_path(@good), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              good_path(@good),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
